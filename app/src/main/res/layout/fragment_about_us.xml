<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.supreeta.dsgalpalli.foodvana.foodvana.fragments.AboutUsFragment">

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="About Us"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:text="This app let's you order homemade food at the tap of your finger."
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:text="You can contact us : 8446386524"
        />

<Button
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:textColor="#000000"


    android:text="Call"
    android:background="@android:color/darker_gray"
    android:id="@+id/callId"
    />

</LinearLayout>
