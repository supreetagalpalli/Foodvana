<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.supreeta.dsgalpalli.foodvana.foodvana" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon7"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".activities.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HomeActivity"
            android:label="Home">

        </activity>
        <activity android:name=".activities.LoginActivity"
            android:label="Login">
        </activity>
        <activity android:name=".activities.RegisterActivity"
            android:label="Register">
        </activity>
        <activity android:name=".activities.ProductListActivity"
            android:label="Product List">
        </activity>
        <activity android:name=".activities.BasketItemsActivity"
            android:label="Basket Items">

        </activity>
        <activity android:name=".activities.ProductDetailsActivity"
            android:label="Product Details">
        </activity>
        <activity android:name=".activities.BillActivity"
            android:label="Bill Generation">
        </activity>
        <activity android:name=".activities.ThankyouActivity" >
        </activity>
    </application>

</manifest>
